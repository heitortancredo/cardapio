<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h10><%= product.name %></small></h10>
    </div>
    <div class="col-xs-4">

      <%= form_for order_item, remote: true do |f| %>
      <h10 class="text-right">Pre√ßo Unidade: <span style="color: green"><%= number_to_currency product.price %></span></h10>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control input-sm", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Adicionar", class: "btn btn-primary btn-xs" %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
